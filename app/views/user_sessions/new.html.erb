<div class="span-9">

  <h1>Login with a Regular Account</h1>

  <% form_for @user_session, :url => user_session_path do |f| %>
    <%= f.error_messages %>
    <%= f.label :email, "E-mail Address" %><br />
    <%= f.text_field :email %><br />
    <br />
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
    <br />
    <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
    <br />
    <%= f.submit "Log in" %>
  <% end %>
  <p style="text-align: right; margin: 20px;">
    <%= link_to 'Register', new_account_path, :class => 'fake_button' %>
    <br />
    <%= link_to 'Forgot Password?', new_password_reset_path, :class => 'fake_button' %>
  </p>
</div>

<div class="span-10 last">

<h1>Login or create an account with OpenID</h1>
  <div>
  <% form_for @user_session, :url => user_session_path do |f| %>
    <%= f.error_messages %>
    <%= f.label :openid_identifier, "OpenID" %><br />
    <%= f.text_field :openid_identifier %>
    <span id="openid_login_target"></span>
    <br />
    <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
    <!-- BEGIN ID SELECTOR -->
    <script type="text/javascript">
      <!--
          // Tell ID Selector which controls to affect
          var idselector_input_id = "user_session_openid_identifier";
          var idselector_target_id = "openid_login_target";
        -->
    </script>
    <%= javascript_include_tag 'idselector.js' %>
    
    <!-- END ID SELECTOR -->

    <br />
    <%= f.submit "Log in" %>
  <% end %>
  </div>
  <p style="margin-top: 20px;">
    <strong>What is OpenID?</strong><br/> 
    OpenID allows you to use an existing account to sign in to multiple websites, without needing to create new passwords. 
    For example, if you have a Google account or a Yahoo! account, you can use your Google or Yahoo! account to log in to 
    this site. For more information, visit <a href="http://openid.net/get-an-openid/what-is-openid/" target="_blank">OpenID.net</a>.
  </p>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('a.openids').click(function(event){
      event.preventDefault();
      $('#user_session_openid_identifier')[0].value = $(this)[0].href;
    })
  });
</script>
